@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<IdentityRole>
@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles</h2>

<!-- Roles List -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Editing-->
                    <a class="btn btn-primary" href="#">Edit</a>
                    <a class="btn btn-danger" href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- New Role -->
<h3>Create a New Role</h3>
<form asp-action="Create" method="post" class="form-inline">
    <div class="form-group">
        <label for="roleName" class="mr-2">Role Name</label>
        <input type="text" id="roleName" name="name" class="form-control mr-2" />
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>


<!-- Assign Role -->
<h3>Assign Role to User</h3>
<form asp-action="AssignRole" method="get" class="form-inline">
    <div class="form-group">
        <label for="userId" class="mr-2">Select User</label>
        <select id="userId" name="userId" class="form-control mr-2">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>

        <label for="roleName" class="mr-2">Select Role</label>
        <select id="roleName" name="roleName" class="form-control mr-2">
            @foreach (var role in Model)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>

        <button type="submit" class="btn btn-primary">Assign Role</button>
    </div>
</form>

<!-- Errors output -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
